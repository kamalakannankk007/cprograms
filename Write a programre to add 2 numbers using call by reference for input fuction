#include<stdio.h>
int input(int *a,int *b)
{
printf("enter a \n");
scanf("%d", a);
printf("enter b \n");
scanf("%d",b);
}
int add(int a,int b)
{
int c;
c=a+b;
return c;
}
int output(int a ,int b, int c)
{
printf("%d + %d= %d",a,b,c);
}
void main()
{
int x,y,z;
input(&x,&y);
z=add(x,y);
output(x,y,z);
}
